<!-- Navbar -->
<%- include("./navbar") %>

	<div class="latest-news pt-150 pb-150">
		<div class="container">



			<div class="row">



				<% for(var i=0; i < quotes.length; i++) {%>



					<div class="col-lg-4 col-md-6">
						<div class="single-latest-news">
							<a href="/details/<%= quotes[i]._id %>">
								<img src="/img/<%=quotes[i].image%>" alt="no image">
							</a>
							<div class="news-text-box">
								<h3><a href="/details/<%= quotes[i]._id %>">
										<%= quotes[i].title %>
									</a></h3>
								<p class="blog-meta">
									<span class="author btn-success btn">category : <%= quotes[i].category%></span>
									<span class="date "> Created_at :<%= quotes[i].createdDate%></span>
								</p>
								<p class="excerpt">
									<%= quotes[i].description%>
								</p>
								<a href="/details/<%= quotes[i]._id %>" class="btn btn-primary text-center"> <i
										class="fas fa-eye"></i> &nbsp;Show Details </a>


							</div>
						</div>
					</div>

					<% } %>

			</div>
			<div class="row">
				<div class="col-lg-12 text-center">
					<a href="/" class="boxed-btn">More News</a>
				</div>
			</div>
		</div>
	</div>
	<!-- end latest news -->

	<!--Footer-->
	<%- include("./footer") %>