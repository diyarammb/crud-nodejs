	<!--Main layout-->
	<main class="my-5">
		<div class="container">
			<!--Section: Content-->
			<section class="text-center">
				<div class="row">
					<div class="col-lg-8 offset-lg-2 text-center">
						<div class="section-title">
							<h3><span class="orange-text">About </span> Blog</h3>
							<p>Laravel is a web application framework with expressive, elegant syntax. We’ve already
								laid the foundation — freeing you to create without sweating the small things.</p>
						</div>
					</div>
				</div>


				<div class="row">

					<% for(var i=quotes.length-1;i> (quotes.length -6) ;i--){ %>
						<div class="col-lg-4 col-md-12 mb-4">
							<div class="card">
								<div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
									<img src="/img/<%=quotes[i].image%>" class="img-fluid" />
									<a href="#">
										<div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
									</a>
								</div>
								<div class="card-body">
									<h5 class="card-title">
										<%= quotes[i].title %>
									</h5>
									<p class="card-text">
										<%= quotes[i].description %>
									</p>
									<a href="/details/<%= quotes[i]._id %>" class="btn btn-primary "> <i
											class="fas fa-eye"></i> &nbsp;Show Details </a>

								</div>
							</div>
						</div>
						<% } %>

				</div>


			</section>
			<!--Section: Content-->


		</div>
	</main>
